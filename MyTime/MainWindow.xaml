<Window x:Class="MyTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTime"
        xmlns:vms="clr-namespace:MyTime.ViewModel"
        mc:Ignorable="d"
        Title="My Time" Height="450" Width="800">
    <Window.DataContext>
        <vms:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <StackPanel>
            <Label Content="Date of Birth" />
            <DatePicker x:Name="dob_datepicker" FirstDayOfWeek="Monday" SelectedDateChanged="dob_datepicker_SelectedDateChanged" SelectedDate="{Binding DOB, Mode=OneWayToSource}" />
            <Label Content="{Binding MyElapsedTime}"/>
        </StackPanel>
    </Grid>
</Window>
